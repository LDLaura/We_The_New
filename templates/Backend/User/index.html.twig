{% extends 'base.html.twig' %}

{% block title %}
    Admin des Users
    {{ parent() }}
{% endblock %}

{% block body %}
    <section class="container mt-2">
        <h1 class="text-center">Admin des Users</h1>
        <a href="{{ path('app.register') }}" class="btn btn-primary">Cr√©er un utilisateur</a>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join(', ')|replace({'ROLE_' : ''})|title }}</td>
                        <td>
                            <a href="#" class="btn btn-warning">Editer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
